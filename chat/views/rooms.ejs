<!DOCTYPE html>
<html>
<head>
	<title>chat</title>
	<meta charset="utf-8">
</head>

<body>
	<form>
		<div>
		<input type="text" id="msg" placeholder="メッセージ">
		<input type="button" id="send" value="send">
		</div>
	</form>

	<hr>
	<div id="host"><%= host_pid%></div>

	<hr>
	<div id="msgarea"></div>

<script src="/js/jquery-2.0.3.min.js"></script>
<script src="https://skyway.io/dist/v2/0.3/peer.min.js"></script>
<script src="/js/mame.js"></script>
<script>
	mame.init();
	mame.connecting($("#host").text());

	$("#send").on("click", function(){
		mame.send($("#msg").val());
	});

	window.onunload = window.onbeforeunload = function(e) {
		mame.close();
	}
</script>

</body>

</html>

